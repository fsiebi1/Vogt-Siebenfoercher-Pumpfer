@model List<CodingLanguages.Models.Languages>

@using CodingLanguages.Controllers
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<HomeController> StringLocalizer

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/talbe.css" />

<h1>@StringLocalizer["index.h1"]</h1>
<br />

@if ((Model != null) && (Model.Count >= 1))
{
    <table>
        <thead>
            <tr>
                <td>
                    @StringLocalizer["index.lang"]
                </td>
                <td>
                    @StringLocalizer["index.object"]
                </td>
                <td>
                    @StringLocalizer["adv"]
                </td>
                <td>
                    @StringLocalizer["dia"]
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (Languages s in Model)
            {
                <tr>
                    <td>
                        <a href="/@s.languageName/Index">@s.languageName</a>
                    </td>
                    <td>
                        @s.info
                    </td>
                    <td>
                        @s.adv
                    </td>
                    <td>
                        @s.disadv
                    </td>
                </tr>
            }
        </tbody>

    </table>
}