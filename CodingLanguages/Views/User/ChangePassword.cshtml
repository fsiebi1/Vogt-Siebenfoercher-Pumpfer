@model CodingLanguages.Models.User
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>Change Password</h1>

<div class="form">
    <form asp-controller="user" asp-action="ChangePassword" method="post">
        <p class="oldpassword">
            <label asp-for="PasswordOld">Old Password</label>
            <input type="password" asp-for="PasswordOld" placeholder="Old password..">
            <span asp-validation-for="PasswordOld"></span>
        </p>

        <p class="password">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" placeholder="New password..">
            <span asp-validation-for="Password"></span>
        </p>

        <p class="cpassword">
            <label asp-for="CPassword">Confirm Password</label>
            <input type="password" asp-for="CPassword" placeholder="Confirm new password...">
            <span id="cpasswordMessage" style="display:none; color:red"> Passwörter stimmen nicht überein!</span>
        </p>

        <p>
            <input id="btnSubmit" type="submit" value="Submit">
        </p>
    </form>
</div>

@section Scripts {
    <script src="~/js/chPassword.js" asp-append-version="true"></script>
}