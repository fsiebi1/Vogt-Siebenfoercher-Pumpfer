@model CodingLanguages.Models.User
@{
    ViewData["Title"] = "Profil";
}

@using CodingLanguages.Controllers
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<UserController> StringLocalizer

<h1>@StringLocalizer["profil"]</h1>

<div class="form">
    <input type="hidden" asp-for="UserID" />
    <input type="hidden" asp-for="Admin" />

    <p>
        <label asp-for="Username">@StringLocalizer["username"]</label>
        <input type="text" asp-for="Username" readonly />
    </p>

    <p>
        <label asp-for="Firstname">@StringLocalizer["firstname"]</label>
        <input type="text" asp-for="Firstname" readonly />
    </p>

    <p>
        <label asp-for="Lastname">@StringLocalizer["lastname"]</label>
        <input type="text" asp-for="Lastname" readonly />
    </p>

    <p>
        <label asp-for="Email">@StringLocalizer["email"]</label>
        <input type="email" asp-for="Email" readonly>
    </p>

    <p>
        <label asp-for="Gender">@StringLocalizer["gender"]</label><br />
        <select asp-for="Gender" readonly>
            @switch ((int)Model.Gender)
            {
                case 0:
                    <option value="0">@StringLocalizer["gen.ma"]</option>
                    break;
                case 1:
                    <option value="1">@StringLocalizer["gen.fm"]</option>
                    break;
                case 2:
                    <option value="2">@StringLocalizer["gen.di"]</option>
                    break;
            }
        </select>
    </p>

    <p>
        <label asp-for="Birthdate">@StringLocalizer["birthday"]</label>
        <input type="date" asp-for="Birthdate" readonly>
    </p>

        <form class="changeForm" action="/user/update" method="get">
            <input id="btnChange" type="submit" value=@StringLocalizer["chpf"]>
        </form>

        <form class="changeForm" action="/user/changePassword" method="get">
            <input style="background-color: blue;" id="btnChange" type="submit" value=@StringLocalizer["chpwd"]>
        </form>

        <form class="changeForm" action="/user/delete" method="get">
            <input style="background-color: red;" id="btnChange" type="submit" value=@StringLocalizer["del"]>
        </form>

</div>